# VMS eProc Environment Configuration
# Copy this file to .env and update with your actual values

# Application Environment
ENVIRONMENT=production
DEBUG_MODE=false

# Database Configuration - Main Database
DB_HOSTNAME=localhost
DB_PORT=3307
DB_USERNAME=eproc_user
DB_PASSWORD=your_secure_password_here
DB_DATABASE_MAIN=eproc
DB_DRIVER=mysqli
DB_PREFIX=
DB_PERSISTENT=false
DB_CACHE=false
DB_CACHE_DIR=
DB_CHARSET=utf8
DB_COLLATION=utf8_general_ci
DB_SWAP_PREFIX=
DB_ENCRYPT=false
DB_COMPRESS=false
DB_STRICT=false
DB_SAVE_QUERIES=true

# Database Configuration - Planning Database
DB_DATABASE_PLANNING=eproc_perencanaan
# Optional: Override main DB settings for planning database
# DB_PLANNING_HOSTNAME=localhost
# DB_PLANNING_PORT=3307
# DB_PLANNING_USERNAME=eproc_user
# DB_PLANNING_PASSWORD=your_secure_password_here

# URL Configuration
BASE_URL=https://your-domain.com/app/
EXTERNAL_URL=https://your-domain.com/main
SSL_ENABLED=true

# Admin Intra Domain Configuration (for JWT authentication)
ADMIN_INTRA_URL=http://local.eproc.intra.com/main
JWT_SECRET_KEY=your_secure_jwt_secret_key_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRE_TIME=3600

# Application Redirects
REDIRECT_DASHBOARD=dashboard
REDIRECT_AUCTION=auction
REDIRECT_ADMIN=admin

# Authentication URLs
PENGADAAN_DASHBOARD_URL=https://your-domain.com/app/dashboard
PENGADAAN_ADMIN_URL=https://your-domain.com/app/admin
NUSANTARA_DASHBOARD_URL=https://your-domain.com/app/dashboard
NUSANTARA_BASE_URL=https://your-domain.com/app/

# Security Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Session Configuration
SESSION_DRIVER=files
SESSION_COOKIE_NAME=app_eksternal
SESSION_EXPIRE=7200

# Email Configuration
SMTP_HOST=your-smtp-server.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password
SMTP_ENCRYPTION=tls

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=./uploads/
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,png

# Logging Configuration
LOG_LEVEL=error
LOG_PATH=./application/logs/

# Cache Configuration
CACHE_ENABLED=true
CACHE_DRIVER=redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Session Security
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true 